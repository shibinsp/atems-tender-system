# Application Settings
APP_NAME=ATEMS
APP_VERSION=1.0.0
# IMPORTANT: Set DEBUG=False in production
DEBUG=False

# Database
DATABASE_URL=sqlite:///./atems.db

# JWT Settings
# CRITICAL: Generate a secure secret key for production using: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=atems_test_secret_key_for_development_only_do_not_use_in_production_2026
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI API Keys - Set your API keys here (DO NOT commit actual keys to version control)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
MISTRAL_API_KEY=

# File Upload Settings
MAX_FILE_SIZE_MB=25
UPLOAD_DIR=uploads

# CORS - Add production origins as needed
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
